<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_lesson_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Алгебра/Информатика"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toEndOf="@+id/tv_item_lesson_number"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_lesson_time"
                android:layout_width="120dp"
                android:layout_height="15dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="9:00 - 20:00"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/tv_item_lesson_number"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_lesson_name" />

            <TextView
                android:id="@+id/tv_item_lesson_number"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_lesson_teacher"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Смирнова/Васильев"
                android:textColor="#000000"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_item_lesson_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_item_lesson_cabinet"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:fontFamily="@font/comfortaa_bold"
                android:text="30в"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_item_lesson_time"
                app:layout_constraintStart_toEndOf="@+id/tv_item_lesson_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_lesson_name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>